package com.db.grad.javaapi.service;

import com.db.grad.javaapi.model.Book;
import com.db.grad.javaapi.repository.BooksRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;
import java.util.Optional;

@Service
public class BookHandler implements BooksService
{
    private BooksRepository itsBooksRepo;

    @Autowired
    public BookHandler( BooksRepository bookRepo )
    {
        itsBooksRepo = bookRepo;
    }

    @Override
    public Book getBookByNumber(String bookNumber)
    {
        Book bookToFind = new Book();
        bookToFind.setBookNumber(bookNumber);
        List<Book> books = itsBookRepo.findByNumber(bookNumber);
        Book result = null;

        if( books.size() == 1)
            result = books.get(0);

        return result;
    }
